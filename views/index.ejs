                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((item)=>{ %>
                        <tr>
                            <th scope="row">
                                <%= item.todo %>
                                <a class="btn btn-danger" href="/delete/<%= item._id %>">drop</a>
                            </th>
                            
                        <% }) %>

                        <!-- <td>Mark</td> -->
                        <!-- <td>Otto</td>
