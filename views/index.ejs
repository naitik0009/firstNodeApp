<%- include("./include/header") %>


<body>


    <div class="container mt-5">
        <form action="/add/todo" method="post" class="d-flex">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Note To be Added</label>
                <input type="text" class="form-control" name="todo" id="exampleInputEmail1" aria-describedby="emailHelp">
